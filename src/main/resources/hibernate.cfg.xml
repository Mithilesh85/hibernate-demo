
<hibernate-configuration>

    <session-factory>
        
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/myhiber</property>
        <property name="connection.username">root</property>
        <property name="connection.password">myserver</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        
        <mapping class="com.mithilesh.Student" ></mapping>
        <mapping class="com.mithilesh.Address" ></mapping>
        <mapping class="com.mithilesh.map.Question" ></mapping>
        <mapping class="com.mithilesh.map.Answer" ></mapping>
        <mapping class="com.mithilesh.map1.Employee" ></mapping>
        <mapping class="com.mithilesh.map1.Project" ></mapping>
        
    </session-factory>

</hibernate-configuration>